{
  "name": "things-gateway",
  "version": "0.7.0",
  "description": "Web of Things gateway",
  "main": "src/app.js",
  "scripts": {
    "test": "webpack && npm run lint && npm run mocha",
    "lint": "eslint .",
    "mocha": "./src/test/run-tests.sh",
    "jest": "./src/test/run-tests.sh",
    "yarn-check": "./src/test/yarn-test.sh",
