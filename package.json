    "testMatch": [
      "**/test/**/*-test.(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest/preprocessor",
      "(validator\\.js?$|speech\\.js?$|schema-utils\\.js)": "babel-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/common.js",
    "testEnvironment": "node"
