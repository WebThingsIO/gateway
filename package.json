{
  "name": "things-gateway",
  "version": "0.1.0",
  "description": "Web of Things gateway",
  "main": "app.js",
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "lint": "eslint .",
    "mocha": "./test/run-tests.sh",
    "yarn-check": "./test/yarn-test.sh",
    "cov": "nyc npm run mocha",
    "cov-html": "nyc --reporter=html npm run mocha",
    "start": "node app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-iot/gateway.git"
  },
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-iot/gateway/issues"
  },
  "homepage": "https://iot.mozilla.org",
  "dependencies": {
    "asn1.js": "^4.9.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.1",
    "config": "^1.26.1",
    "debug": "^2.6.8",
    "event-to-promise": "^0.8.0",
    "express": "^4.15.2",
    "express-promise-router": "2.0.0-alpha.1",
    "express-ws": "^3.0.0",
    "jsonwebtoken": "^7.4.1",
    "node-getopt": "^0.2.3",
    "onoff": "^1.1.2",
    "openzwave-shared": "^1.3.2",
    "serialport": "^4.0.7",
    "sqlite3": "^3.1.8",
    "uuid": "^3.1.0",
    "ws": "^2.2.3",
    "xbee-api": "^0.5.2",
    "zcl-id": "^0.3.2",
    "zcl-packet": "^0.2.2",
    "le-challenge-dns": "https://github.com/mozilla-iot/le-challenge-dns",
    "greenlock": "^2.1.15",
    "node-fetch": "^1.7.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "chai": "^4.0.1",
    "chai-http": "^3.0.0",
    "codecov": "^2.2.0",
    "eslint": "^4.0.0",
    "jest": "^20.0.4",
    "mocha": "^3.4.2",
    "node-rest-client": "^3.1.0",
    "nyc": "^11.0.2"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "transform": {
      "^.+\\.jsx?$": "./jest-transform"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/common.js",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*-test.js?(x)"
    ]
  }
}
